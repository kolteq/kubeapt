ARG GO_VERSION=1.25

FROM golang:${GO_VERSION}-bookworm AS builder
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -trimpath -ldflags="-s -w" -o /out/kubeapt ./cmd/kubeapt/

RUN /out/kubeapt bundles download kolteq-best-practices
RUN /out/kubeapt bundles download pod-security-admission
RUN /out/kubeapt policies download

FROM gcr.io/distroless/static-debian12

COPY --from=builder /out/kubeapt /usr/local/bin/kubeapt
COPY --from=builder /root/.config/kubeapt /root/.config/kubeapt

ENTRYPOINT ["/usr/local/bin/kubeapt"]
